<h1>Welcome to Dreamforce!</h1>

<form action="/survey" method="post">

  <input type="hidden" name="id" value="{{id}}">
  <input type="hidden" name="latitude" id="latitude">
  <input type="hidden" name="longitude" id="longitude">

  <ul class="questions">

    <li>
      <label for="firstnameInput">What's your first name?</label>
      <input type="text" name="firstname" id="firstnameInput">
    </li>

    <li>
      <label for="lastnameInput">What's your last name?</label>
      <input type="text" name="lastname" id="lastnameInput">
    </li>

    {{#each questions}}
      <li class="{{response_type__c}}">
        <label>{{question__c}}</label>
        {{{answerInput}}}
      </li>
    {{/each}}
  </ul>

  <input type="submit" value="Submit">
</form>