@import "themes/roboto"

// Mixins
// -----------------------------------------------------------------

box-shadow(args...)
  -webkit-box-shadow args
  -moz-box-shadow args
  box-shadow args

// Styles
// -----------------------------------------------------------------

*, *:before, *:after
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  box-sizing border-box

html
  padding 0
  margin 0

body
  fancy-font()
  font-size 18px
  font-weight 300
  background-color backgroundColor
  padding 15px
  color textColor

.content
  margin-left auto
  margin-right auto
  margin-bottom 20px
  position relative
  width: 100%
  max-width 480px
  padding 15px
  background: white
  box-shadow 1px 2px 5px rgba(0,0,0,0.2)
  margin-top 10px
  transition all .5s
  opacity 0
  -webkit-transform scale(0.5)

  &.active
    opacity 1
    -webkit-transform scale(1)

h1,h2,h3,h4
  font-weight 300
  color headingColor

h1
  font-size 24px
  margin 0
  padding 0

label
  fancy-font()
  font-weight 300
  list-style none
  margin 0
  padding 0 0 6px 0
  font-size 16px
  line-height: 1.5

a
  color headingColor

ul
  &.questions, &.surveys
    list-style none
    margin 0
    padding 0
    > li
      margin 0
      padding 10px 0

div
  &.radio
    padding 0 0 5px 0
    label
      font-size 16px

input[type="text"]
  normal-font()
  font-weight 300
  font-size 18px
  padding 5px
  padding-left 30px
  margin: 20px 0
  color textColor
  background-color inputBackgroundColor
  border-radius 2px
  border 1px solid #999
  outline none
  display block
  width 100%
  -webkit-appearance none
  outline 15px solid transparent
  transition all .2s
  background white url('pencil.svg') no-repeat 10px center
  opacity 0.3
  &:focus
    outline 15px solid #EEE
    opacity 1
    // background-position 10px center

input[type="radio"]
  &:focus
    // outline: thin dotted #333
    // outline: 5px auto -webkit-focus-ring-color
    // outline-offset: -2px

input[type="submit"]
  fancy-font()
  font-size 18px
  font-weight 300
  padding 5px 15px
  background-color #2ECC71
  color textColorInverse
  border-radius 2px
  outline none
  display inline-block
  -webkit-appearance none
  margin 20px 0
  border none
  cursor pointer